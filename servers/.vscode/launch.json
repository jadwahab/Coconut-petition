    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "sourceMaps": true,
            "preLaunchTask": "npm: build",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--colors",
                "--require",
                "babel-polyfill", 
                "--no-timeouts",
                "${workspaceFolder}/dist/test/CredentialSig.test.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug petitionOwner Command",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "preLaunchTask": "npm: build",
            "program": "${workspaceRoot}/dist/petitionOwner/server.js",
            "args": "4000",
            "stopOnEntry": false,
            "localRoot": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/dist/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Issuer Command",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "preLaunchTask": "npm: build",
            "program": "${workspaceRoot}/dist/issuer/server.js",
            "args": "5000",
            "stopOnEntry": false,
            "localRoot": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/dist/**"
            ]
        }
    ]
}